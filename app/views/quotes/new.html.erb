<h2>Enter your best practice here</h2>
<%= simple_form_for @quote do |f| %>
	<%= f.input :saying %> <br />
	<%= f.input :author %> <br />
	<%= f.submit 'Create', :class => 'btn btn-danger' %> <br /> <hr />
	<% if flash[:error].present? %>
		<div class="col-xs-10 col-xs-offset-1 alert alert-danger">
			<%= flash[:error].html_safe %>
		</div>
	<% end %>
<% end %>